<%- include('header') %>
<div class="container">
    <div class="row">
        <div class=" col-md-6 col-xs-12">
            <h2>
                <% if(typeof pub=== 'undefined'){%>
                    Új kocsma
                <%} else{%>
                    Módosítás
                <%}%>
            </h2>

            <form>
                <div class="form-group">
                    <label for="name">Név</label>
                    <input type="text" id="name" class="form-control" <%if(typeof pub!== 'undefined'){%> value="<%=pub.name-%>" <%}%>>
                </div>
                <div class="form-group">
                    <label for="email">Cím</label>
                    <input type="text" id="email" class="form-control"  <%if(typeof pub!== 'undefined'){%> value="<%=pub.address%>" <%}%>>
                </div>
                <div class="form-group">
                    <label for="room">Nyitvatartás</label>
                    <input type="text" id="room" class="form-control"  <%if(typeof pub!== 'undefined'){%> value="<%=pub.open%>" <%}%>>
                </div>
                <div class="form-group">
                    <a href="/pubs" class="btn btn-primary">Mentés</a>
                    <a href="/pubs" class="btn btn-default">Vissza</a>
                </div>
            </form>
        </div>
    </div>
</div>
<%- include('footer') %>