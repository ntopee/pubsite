<%- include('header') %>
<div class="container">
    <div class="row">
        <div class=" col-md-6 col-xs-12">
            <h2>
                <% if(typeof person=== 'undefined'){%>
                    Új személy
                    <%} else{%>
                        Módosítás
                    <%}%>
            </h2>

            <form>
                <div class="form-group">
                    <label for="name">Név</label>
                    <input type="text" id="name" class="form-control"  <%if(typeof person!== 'undefined'){%> value="<%=person.name%>" <%}%>>
                </div>
                <div class="form-group">
                    <label for="fullname">Teljes Név</label>
                    <input type="text" id="fullname" class="form-control"  <%if(typeof person!== 'undefined'){%> value="<%=person.fullname%>" <%}%>>
                </div>
                <div class="form-group">
                    <label for="favourite">Kedvenc</label>
                    <input type="text" id="favourite" class="form-control"  <%if(typeof person!== 'undefined'){%> value="<%=person.favourite%>" <%}%>>
                </div>
                <div class="form-group">
                    <a href="/people/list" class="btn btn-primary">Mentés</a>
                    <a href="/people/list" class="btn btn-default">Vissza</a>
                </div>
            </form>
        </div>
    </div>
</div>
<%- include('footer') %>