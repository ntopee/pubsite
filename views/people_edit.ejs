<%- include('header') %>
<div class="container">
    <div class="row">
        <div class=" col-md-6 col-xs-12">
            <h2>
                <% if(typeof person=== 'undefined'){%>
                    Új személy
                    <%} else{%>
                        Módosítás
                    <%}%>
            </h2>

            <form method="post">
                <div class="form-group">
                    <label for="name">Név</label>
                    <input type="text" id="name" name="name" class="form-control"  <%if(typeof person!== 'undefined'){%> value="<%=person.name%>" <%}%> autofocus onfocus="this.setSelectionRange(this.value.length,this.value.length)">
                </div>
                <div class="form-group">
                    <label for="fullname">Teljes Név</label>
                    <input type="text" id="fullname" name="fullname" class="form-control"  <%if(typeof person!== 'undefined'){%> value="<%=person.fullname%>" <%}%>>
                </div>
                <div class="form-group">
                    <label for="favourite">Kedvenc</label>
                    <input type="text" id="favourite" name="favourite" class="form-control"  <%if(typeof person!== 'undefined'){%> value="<%=person.favourite%>" <%}%>>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary" type="submit">Mentés</button>
                    <a href="/people/list" class="btn btn-default">Vissza</a>
                </div>
            </form>
        </div>
    </div>
</div>
<%- include('footer') %>