<%- include('header') %>
<div class="container">
    <h2>Új terv</h2>
    <div class="row">
        <div class="col-md-12 col-lg-4">
                <h3>Résztvevők</h3>
                <ul id="favourites" class="fbox">
                </ul>
            <h3>Többiek</h3>
                <ul id="other" class="fbox">
                    <% personList.forEach(function(p){%>
                        <li class="column" itemID="1" data-id="<%= p._id %>">
                            <header><%= p.name %></header>
                        </li>
                        <% }) %>
                </ul>
        </div>

        <div class="col-md-12 col-lg-8">
            <h2>Ide mehetünk</h2>
            <table class="table table-stripped">
                <thead>
                <tr>
                    <th>Név</th>
                    <th>Cím</th>
                    <th>Nyitvatartás</th>
                </tr>
                </thead>
                <tbody id="pubtable">
                <% pubList.forEach(function(p){%>
                <tr class="trow">
                    <td class="namecol"><%=p.name %></td>
                    <td class="fullnamecol"><%= p.address%></td>
                    <td class="favcol"><%= p.open%></td>
                </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>
<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js"></script>
<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.13/jquery-ui.min.js"></script>
<script type="text/javascript" src="/js/frontpage.js"></script>
<%- include('footer') %>
